<p id="notice"><%= notice %></p>
<div class="container">
  <div class="title">
    <h2><%= @cocktail.name %></h2>
      <% @cocktail.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 300, width: 400, crop: :fill %>
      <% end %>
  </div>
<div class="doses">
<% @cocktail.doses.each do |dose|  %>
<p><%= dose.description  %> <%= dose.ingredient.name %></p>
<%= link_to dose_path(dose), method: :delete, data: {confirm: "Are your sure?"} do %>
<i class="fas fa-trash-alt"></i>
<% end %>
<% end %>
</div>

<br>
<p><%= link_to 'Back', root_path %></p>
<p><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail.id) %></p>
<br>
<%= link_to cocktail_path(@cocktail), method: :delete, data: {confirm: "Are your sure?"} do %>
<i class="fas fa-trash-alt">Delete this cocktail</i>
<% end %>
</div>
